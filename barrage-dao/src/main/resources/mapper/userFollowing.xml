<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hku.barrage.dao.UserFollowingDao">
    <insert id="addUserFollowings" parameterType="com.hku.barrage.domain.UserFollowing">
        insert into
        t_user_following(
                         userId, followingId, groupId, createTime
        ) VALUES (
                  #{userId}, #{followingId}, #{groupId}, #{createTime}
                         )
    </insert>

    <delete id="deleteUserFollowing">
        delete from
                 t_user_following
        where
            userId = #{userId}
        and
            followingId = #{followingId}
    </delete>
    <select id="getUserFollowings" parameterType="java.lang.Long" resultType="com.hku.barrage.domain.UserFollowing">
        select
            *
        from
            t_user_following
        where
            userId = #{userId}
    </select>
    <select id="getUserFans" parameterType="java.lang.Long" resultType="com.hku.barrage.domain.UserFollowing">
        select
            *
        from
            t_user_following
        where
            followingId = #{followingId}
    </select>
</mapper>